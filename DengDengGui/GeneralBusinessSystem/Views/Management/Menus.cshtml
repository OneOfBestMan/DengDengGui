                menuName: ""
            },
            methods: {
                sava: function () { 
                    $.ajax({
                        type: 'POST',
                        url: '/addmenu',
                        data: {
                            name: this.menuName
                        },
                        success: function (dataBack) {
                            if (dataBack.result == 0) {
                                layer.alert(dataBack.message, {
                                    icon: 2,
                                    skin: 'layer-ext-moon'
                                })
                            }
                            else {
                                window.location.href = "/menus";
                            }
                        },
                        error: function (error) {                
                            layer.alert(error.status + error.statusText, {
                                icon: 2,
                                skin: 'layer-ext-moon'
                            })
                        }
                    });

                }
            }
        })
        //#endregion
    </script>


}