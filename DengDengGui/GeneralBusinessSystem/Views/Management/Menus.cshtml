            success: function (dataBack) {
                if (dataBack.result == 1) {
                    new Vue({
                        el: "#menu-div",
                        data: { menus: dataBack.data }

                    })
                } else {
                    layer.alert(dataBack.message, {
                        icon: 2,
                        skin: 'layer-ext-moon'
                    })
                }
            },
            error: function (error) {
                layer.alert(error.status + error.statusText, {
                    icon: 2,
                    skin: 'layer-ext-moon'
                })
            }
        });


        //#endregion
        //#region删除菜单
        function remove(id) {
            layer.confirm('你确定要删除ID为：' + id + '的记录吗？', {
                btn: ['确定', '取消'] //按钮
            }, function () {             
                $.ajax({
                    type: 'DELETE',
                    url: '/deletemenu',
                    data: {
                        id: id
                    },
                    success: function (dataBack) {
                        if (dataBack.result == 1) {
                            $("#tr_" + id).remove();
                            layer.msg('删除成功！', {
                                time: 2000
                            });
                        }
                        else {
                            layer.alert(dataBack.message, {
                                icon: 2,
                                skin: 'layer-ext-moon'
                            })
                        }
                    },
                    error: function (error) {
                        layer.alert(error.status + error.statusText, {
                            icon: 2,
                            skin: 'layer-ext-moon'
                        })
                    }
                });

            }, function () {
                //取消按钮
            });
        }
